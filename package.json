{
  "name": "monument",
  "version": "3.3.5",
  "description": "evented routing for nodejs for use on the server and in the client. Isomorphic!",
  "main": "built/index.js",
  "scripts": {
    "test": "npm run flow && npm run lint && npm run ava",
    "ava": "nyc ava -s src/*.test.js bin/*.test.js src/utils/**/*.test.js src/web-sockets/**/*.test.js src/security/**/*.test.js src/routes/**/*.test.js",
    "ava-no-cov": "ava -s src/*.test.js bin/*.test.js src/utils/**/*.test.js src/web-sockets/**/*.test.js src/security/**/*.test.js src/routes/**/*.test.js",
    "ava-parralel": "ava src/*.test.js src/bin/*.test.js src/utils/**/*.test.js src/web-sockets/**/*.test.js src/security/**/*.test.js",
    "flow": "flow",
    "router-tests": "ava -s src/routes/**/*.test.js",
    "start": "node app.js",
    "lint": "bin/lint.js",
    "release": "npm test && echo ' => releasing' && bin/release.js",
    "report": "nyc report --reporter=html",
    "build": "babel src/ -d built/",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/designfrontier/monumentjs"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "built/**"
  ],
  "bugs": {
    "url": "https://github.com/designfrontier/monumentjs/issues"
  },
  "author": "Daniel Sellers <daniel@designfrontier.net>",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "events",
    "routing",
    "isomorphic",
    "browser",
    "event",
    "eda",
    "server",
    "http",
    "web",
    "webserver",
    "framework",
    "api",
    "app",
    "rest",
    "restful"
  ],
  "dependencies": {
    "busboy": "0.2.14",
    "content-security-policy-builder": "1.1.0",
    "dot": "1.1.2",
    "etag": "1.8.1",
    "glob": "7.1.2",
    "harken": "1.2.7",
    "iltorb": "2.0.3",
    "lodash.clonedeep": "4.5.0",
    "lodash.pick": "4.4.0",
    "media-typer": "0.3.0",
    "mime": "2.0.3",
    "node-statsd": "0.1.1",
    "on-headers": "1.0.1",
    "platform": "1.3.4",
    "raw-body": "2.3.2",
    "uuid": "3.1.0",
    "ws": "3.3.2"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "chai": "4.1.2",
    "chalk": "2.3.0",
    "coveralls": "3.0.0",
    "eslint": "4.13.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "flow-bin": "^0.61.0",
    "form-data": "2.3.1",
    "http2": "3.3.7",
    "istanbul": "0.4.5",
    "minimist": "1.2.0",
    "mocha": "4.0.1",
    "mock-require": "2.0.2",
    "nyc": "^11.3.0",
    "semver": "^5.4.1",
    "spdy": "3.4.7",
    "v8-profiler": "5.7.0"
  },
  "engines": {
    "node": ">4.0.0",
    "npm": ">5.0.0"
  },
  "optionalDependencies": {
    "bufferutil": "3.0.3",
    "utf-8-validate": "4.0.0"
  },
  "ava": {
    "concurrency": 10,
    "failFast": false,
    "require": [
      "harken"
    ],
    "babel": "inherit"
  }
}
