{
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "extends": [
      "plugin:flowtype/recommended"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "eqeqeq": 2,
        "curly": 2,
        "quotes": [2, "single", "avoid-escape"],
        "no-undef": 2,
        "comma-style": [2, "first"],
        "camelcase": [2, {"properties": "always"}],
        "indent": ["error", 2, { "MemberExpression": 1, "VariableDeclarator": { "var": 2, "let": 2, "const": 3 }, "flatTernaryExpressions": true }],
        "no-mixed-spaces-and-tabs": 2,
        "one-var": [2, "always"],
        "arrow-body-style": [2, "always"],
        "arrow-parens": [2, "always"],
        "arrow-spacing": 2,
        "prefer-const": 1,
        "prefer-arrow-callback": 1,
        "prefer-template": 1,
        "no-var": 2,
        "strict": [2, "global"],
        "no-unused-vars": 2,
        "no-use-before-define": 2,
        "no-shadow-restricted-names": 2,
        "no-shadow": 2,
        "no-catch-shadow": 2,
        "no-path-concat": 2,
        "brace-style": 2,
        "array-bracket-spacing": [2, "always"],
        "block-spacing": [2, "always"],
        "comma-spacing": [2, {"before": false, "after": true}],
        "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
        "new-cap": 2,
        "new-parens": 2,
        "newline-after-var": [2, "always"],
        "no-negated-condition": 1,
        "no-unneeded-ternary": 2,
        "no-nested-ternary": 2,
        "no-spaced-func": 2,
        "no-array-constructor": 2,
        "no-new-object": 2,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 2,
        "object-curly-spacing": [2, "always"],
        "quote-props": [2, "as-needed"],
        "semi": [2, "always"],
        "space-before-function-paren": 2,
        "keyword-spacing": 2,
        "space-in-parens": [2, "never"],
        "space-infix-ops": 2,
        "space-unary-ops": 2,
        "space-before-blocks": 2,
        "spaced-comment": [2, "always"],
        "no-cond-assign": 2,
        "no-constant-condition": 2,
        "no-debugger": 2,
        "valid-typeof": 2,
        "use-isnan": 2,
        "no-unreachable": 2,
        "no-unexpected-multiline": 2,
        "no-sparse-arrays": 2,
        "no-regex-spaces": 2,
        "no-obj-calls": 2,
        "no-invalid-regexp": 2,
        "no-inner-declarations": 2,
        "no-func-assign": 2,
        "no-extra-semi": 2,
        "no-extra-parens": 2,
        "no-extra-boolean-cast": 2,
        "no-ex-assign": 2,
        "no-empty": 2,
        "no-empty-character-class": 2,
        "no-duplicate-case": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-control-regex": 2,
        "yoda": 2,
        "wrap-iife": [2, "inside"],
        "vars-on-top": 2,
        "radix": 2,
        "no-with": 2,
        "no-warning-comments": 1,
        "no-void": 2,
        "no-useless-concat": 2,
        "no-useless-call": 2,
        "no-unused-expressions": 2,
        "no-throw-literal": 2,
        "no-sequences": 2,
        "no-self-compare": 2,
        "no-script-url": 2,
        "no-return-assign": 2,
        "no-redeclare": 2,
        "no-proto": 2,
        "no-process-env": 1,
        "no-param-reassign": [1, {"props": true}],
        "no-octal": 2,
        "no-new": 2,
        "no-new-wrappers": 2,
        "no-new-func": 2,
        "no-native-reassign": 1,
        "no-multi-str": 1,
        "no-multi-spaces": 2,
        "no-magic-numbers": 0,
        "no-loop-func": 1,
        "no-lone-blocks": 2,
        "no-labels": 2,
        "no-iterator": 2,
        "no-invalid-this": 2,
        "no-implied-eval": 2,
        "no-floating-decimal": 2,
        "no-fallthrough": 2,
        "no-extra-bind": 2,
        "no-extend-native": 2,
        "no-eval": 2,
        "no-eq-null": 2,
        "no-div-regex": 1,
        "no-caller": 2,
        "no-alert": 2,
        "guard-for-in": 2,
        "dot-notation": 2,
        "dot-location": [2, "property"],
        "default-case": 1,
        "complexity": [1,5],

        "max-len": [1, 100, 4],
        "no-bitwise": 2,
        "max-params": [1, 3],
        "max-depth": [2, 2]
    }
}
